<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tekup.hospitaltunisia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospitalTunisia">
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".AboutActivity" />
        <activity android:name=".DocteurActivity" />
        <activity android:name=".RendezVousActivity" android:theme="@style/HospitalTunisia.NoActionBar"/>
        <activity android:name=".ResetPassword" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" android:theme="@style/HospitalTunisia.NoActionBar"/>
    </application>

</manifest>